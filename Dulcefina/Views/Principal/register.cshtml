                        <input asp-for="Correo" class="form-control" id="formGroupExampleInput" placeholder="Correo" autofocus>
                        <span asp-validation-for="Correo" class="text-danger"></span>

                        <input asp-for="Contrasena" class="form-control" id="formGroupExampleInput" placeholder="Contraseña" autofocus>
                        <span asp-validation-for="Contrasena" class="text-danger"></span>

                      <!-- <input asp-for="Contrasena" class="form-control" id="formGroupExampleInput" placeholder="Confirmar Contraseña" autofocus>
